<style>
    .containerForCards {
        display: flex;
        justify-content: space-around;
    }

    .card {
        border-radius: 2px;
        background-color: #009edf;
    }

    .list-group-item {
        margin: 5px;
    }

    .card-body {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: center;
    }


    .card-title {
        text-align: center;
    }

    .form-group input[type="checkbox"] {
        display: none;
    }

    .form-group input[type="checkbox"]+.btn-group>label span {
        width: 20px;
    }

    .form-group input[type="checkbox"]+.btn-group>label span:first-child {
        display: none;
    }

    .form-group input[type="checkbox"]+.btn-group>label span:last-child {
        display: inline-block;
    }

    .form-group input[type="checkbox"]:checked+.btn-group>label span:first-child {
        display: inline-block;
    }

    .form-group input[type="checkbox"]:checked+.btn-group>label span:last-child {
        display: none;
    }

    .btn-success {
        padding: 3px 6px;
        background-color: #009edf;
        border-color: #009edf;
        margin-left: 7px;
    }
</style>

{{#if weather}}
<div class="card" style="width: 18rem;">
    <div class="card-body">
        <form action="/weatherPage" method="post">
            <input name="FavoriteCity" style="display: none;" value="{{weather.name}}" type="text" />
            <button id="button-success" class="btn btn-success">&#127775;</button>
        </form>
        <h5 class="card-title">
            {{weather.name}}
        </h5>

        <img src="http://api.openweathermap.org/img/w/{{icon}}.png" class="card-img-top" alt="imege weather" />

    </div>
    <ul class="list-group list-group-flush">

        <li class="list-group-item">&#127777; {{temp}}&#8451;</li>
        <li class="list-group-item">&#127777;&#8779; {{feels_like}}&#8451;</li>
        <li class="list-group-item">&#32;лал░ {{weather.main.pressure}}</li>
        <li class="list-group-item">&#32;&#127788; {{weather.wind.speed}} m/sec</li>

    </ul>
    <div class="card-body">
        </label>
    </div>

</div>
{{/if }}